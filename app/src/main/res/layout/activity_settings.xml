<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pk.edu.pucit.bcsf14m529.farazmazhar.forecastbynfg.settings">


    <TextView
        android:id="@+id/Unit_Settings_SettingsActivity_XML"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Unit C/F"
        android:textColorHint="#010d21"
        android:textColor="#010d21"
        android:backgroundTint="#010d21"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/AppVersion_Settings_SettingsActivity_XML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#010d21"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="10dp"
        android:text="Weather Forecast By NFG"
        android:textColorHint="#010d21" />

    <TextView
        android:id="@+id/AppVersion_Version_Settings_SettingsActivity_XML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Unit_Settings_SettingsActivity_XML"
        android:text="App. V 1.0"
        android:textSize="10dp"/>
</android.support.constraint.ConstraintLayout>
